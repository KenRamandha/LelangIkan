<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_ikan_riwayat_gagal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:text="Ikan Bawal"/>
            <TextView
                android:id="@+id/tv_nelayan_riwayat_gagal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nelayan Yere"
                android:fontFamily="@font/poppins_regular"
                android:textSize="9sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/back_merah"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Gagal"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/tv_harga_riwayat_gagal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:text="Rp. 50.000"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_jam_riwayat_gagal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:45"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="9sp"
                    android:layout_marginRight="27dp"/>
                <TextView
                    android:id="@+id/tv_tanggal_riwayat_gagal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4/8/21"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="9sp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>