<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pelelang"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="9sp"
                    android:textColor="@color/abu2"
                    android:layout_marginRight="7dp"/>
                <TextView
                    android:id="@+id/tv_pelelang_riwayat_panitia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daniel Fisher"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="12sp"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:padding="6dp">
                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp">
                    <LinearLayout
                        android:layout_width="85dp"
                        android:layout_height="85dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="85dp"
                            android:layout_height="85dp">
                            <ImageView
                                android:id="@+id/iv_gambar_riwayat_panitia"
                                android:layout_width="85dp"
                                android:layout_height="85dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ikan"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_produk_riwayat_panitia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ikan Bawal 50kg"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="3dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Harga"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="9sp"/>
                            <TextView
                                android:id="@+id/tv_harga_riwayat_panitia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp 120.000"
                                android:textSize="13sp"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/green"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end"
                            android:padding="3dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tanggal Lelang"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="9sp"/>

                            <TextView
                                android:id="@+id/tv_tanggal_riwayat_panitia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="23:21:22"
                                android:textSize="13sp"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/green"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="18dp"
                android:paddingLeft="18dp">
                <Button
                    android:id="@+id/btn_riwayat_lelang1_panitia"
                    android:layout_width="92dp"
                    android:layout_height="28dp"
                    android:text="Lihat Detail"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/green"
                    android:textSize="6sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/white"
                    android:background="@drawable/background_button_green2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Total Pembayaran"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="9sp"/>
                <TextView
                    android:id="@+id/tv_total_riwayat_panitia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Rp 143.000"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/green"/>
            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="18dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pemenang Lelang"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="9sp"
                    android:textColor="@color/abu2"/>
                <TextView
                    android:id="@+id/tv_pemenang_riwayat_panitia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Gagat Oaeo"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="11sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/map_marker"/>
                <TextView
                    android:id="@+id/tv_alamat_riwayat_panitia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Legian No.3 Bali"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="9sp"
                    android:textColor="@color/abu2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="9dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>