<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/green"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pelelang Satu"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Lelang"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_medium"/>
                <TextView
                    android:id="@+id/tv_lelangid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LL-2022-00001"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Panitia"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_medium"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/green"/>
                    <TextView
                        android:id="@+id/tv_nama_panitia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yanto Epic"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/green"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ln_detail_konfirmasi_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/back_hijau"
                        android:clickable="true"
                        android:padding="5dp">

                        <TextView
                            android:clickable="true"
                            android:id="@+id/tv_detail_konfirmasi_admin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Bukti Transfer"
                            android:textColor="@color/white"
                            android:textSize="9sp" />
                    </LinearLayout>


                    <TextView
                        android:layout_marginTop="21dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nominal Dibayarkan"
                        android:textSize="10sp"
                        android:fontFamily="@font/poppins_medium"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!--                        <ImageView-->
                        <!--                            android:id="@+id/iv_status_pembayaran_admin"-->
                        <!--                            android:layout_width="15dp"-->
                        <!--                            android:layout_height="15dp"-->
                        <!--                            android:src="@drawable/ic_check_circle"/>-->
                        <!--                        <ImageView-->
                        <!--                            android:layout_width="15dp"-->
                        <!--                            android:layout_height="15dp"-->
                        <!--                            android:src="@drawable/ic_cancel_circle"/>-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp."
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/green"/>
                        <TextView
                            android:id="@+id/tv_nominal_dibayarkan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80.000"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/black"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>