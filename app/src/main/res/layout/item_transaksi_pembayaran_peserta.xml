<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="7dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Pelelang"
                    android:textColor="@color/abu2"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tv_pengirim_transaksi_peserta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Daniel Fisher"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:background="@drawable/back_shadow"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iv_verif_transaksi_peserta"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/check_circle"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/iv_tolak_transaksi_peserta"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/ditolak"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/iv_menunggu_transaksi_peserta"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/pentung_biru"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tv_status_transaksi_peserta"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginStart="5dp"
                            android:text="Menunggu Verifikasi"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:padding="6dp">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="85dp"
                        android:layout_height="85dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="85dp"
                            android:layout_height="85dp">

                            <ImageView
                                android:id="@+id/iv_gambar_transaksi_peserta"
                                android:layout_width="85dp"
                                android:layout_height="85dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ikan" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_produk_transaksi_peserta"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Ikan Bawal 50kg"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_tanggal_transaksi_peserta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="16/8/21"
                            android:textSize="8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:padding="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Harga"
                            android:textSize="9sp" />

                        <TextView
                            android:id="@+id/tv_harga_transaksi_peserta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Rp 120.000"
                            android:textColor="@color/green"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">

                <Button
                    android:id="@+id/btn_detail_transaksi_peserta"
                    android:layout_width="92dp"
                    android:layout_height="28dp"
                    android:background="@drawable/background_button_green2"
                    android:backgroundTint="@color/green"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Lihat Detail"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="7sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Total Pembayaran"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_total_transaksi_peserta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Rp 143.000"
                        android:textColor="@color/green"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="18dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Peserta"
                    android:textColor="@color/abu2"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tv_pemenang_transaksi_peserta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Gagat Oaeo"
                    android:textColor="@color/black"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>