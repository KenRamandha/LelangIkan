<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_nama_detail_testimoni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budi"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_deskripsi_testimoni"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Testimoni nya sanasdasdsadasdsadasdasdasasdasdasdadasdsad"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">
            <TextView
                android:id="@+id/tv_waktu_detail_testimoni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16/08/2022"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:paddingRight="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>