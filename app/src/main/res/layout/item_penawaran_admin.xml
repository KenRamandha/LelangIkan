<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/green"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peserta Satu"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nominal Tawar"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_semibold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. "
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/green"/>
                    <TextView
                        android:id="@+id/tv_harga_tawar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.000.000"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/green"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Tawar"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_semibold"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!--                        <ImageView-->
                        <!--                            android:id="@+id/iv_status_pembayaran_admin"-->
                        <!--                            android:layout_width="15dp"-->
                        <!--                            android:layout_height="15dp"-->
                        <!--                            android:src="@drawable/ic_check_circle"/>-->
                        <!--                        <ImageView-->
                        <!--                            android:layout_width="15dp"-->
                        <!--                            android:layout_height="15dp"-->
                        <!--                            android:src="@drawable/ic_cancel_circle"/>-->
                        <TextView
                            android:id="@+id/tv_tgl_bid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20/01/2023"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/green"
                            android:layout_marginStart="1dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>