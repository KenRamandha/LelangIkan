<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDetailPesananIkanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ikan Bawal"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/tvDetailHargaIkan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp. 20.000"
            android:gravity="right"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="@color/green"
            android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBiayaPengiriman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biaya Pengiriman"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/tvDetaiBiayaPengiriman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp. 50.000"
            android:gravity="right"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="@color/green"
            android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBiayaAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biaya Admin"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/tvDetaiBiayaAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp. 2.000"
            android:gravity="right"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="@color/green"
            android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>
</LinearLayout>