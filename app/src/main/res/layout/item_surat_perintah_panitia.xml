<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@drawable/back_detail2"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_nama_surat_perintah_panitia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:text="Nama Pelelang"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:background="@drawable/back_hijau">
            <TextView
                android:id="@+id/tv_status_surat_perintah_panitia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dalam Pengemasan"
                android:textSize="8sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_marginEnd="20dp">
            <ImageButton
                android:id="@+id/btn_detail_surat_perintah_panitia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_info_24"
                android:background="@color/transparant"/>
            <ImageButton
                android:id="@+id/btn_delete_surat_perintah_panitia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@color/transparant"
                android:src="@drawable/ic_delete_red" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

